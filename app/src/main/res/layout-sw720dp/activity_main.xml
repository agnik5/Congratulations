<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="agnik.congratulations.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/android" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_720"
        android:fontFamily="@string/sans_serif_light"
        android:text="@string/congratulations"
        android:textColor="@color/purple_heart"
        android:textSize="@dimen/textSize_720" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginLeft="@dimen/margin_720"
        android:text="@string/good_luck"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_720" />
</RelativeLayout>
